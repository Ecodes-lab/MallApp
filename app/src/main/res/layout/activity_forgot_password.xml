<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordActivity">


    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:layout_marginBottom="500dp"
        android:scaleType="fitCenter"
        android:background="@drawable/forgot_pw_top_image"
        android:orientation="vertical"
        />
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="11dp"
        android:src="@drawable/ic_chevron" />
    <LinearLayout
        android:id="@+id/vendor_icon"
        android:layout_width="match_parent"
        tools:ignore="ContentDescription"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginTop="150dp"
        android:background="@drawable/shape_top_radius"
        android:orientation="vertical"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="ScrollViewCount">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Forgot Password"
                    android:textSize="28sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="24dp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter your email and weâ€™ll send you a link to reset your password."
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:alpha="0.7"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginBottom="24dp"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="24dp"
                        android:textStyle="normal"

                        />
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="@android:color/transparent"
                        android:layout_marginStart="@dimen/authentication_screen_til_marginStartEnd"
                        android:layout_marginEnd="@dimen/authentication_screen_til_marginStartEnd"

                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:boxStrokeColor="#FFF"
                        app:boxBackgroundColor="#FFF"
                        >


                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_email"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Email"
                            android:background="@drawable/shape_text_input_rounded"
                            android:inputType="textEmailAddress"
                            android:textSize="@dimen/et_text_size"
                            android:textColor="@color/black"
                            android:layout_marginHorizontal="12dp"
                            android:paddingHorizontal="10dp"
                            />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>



                <Button
                    android:id="@+id/btn_forgot_pw_continue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="33dp"
                    android:background="@drawable/gradient"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Continue"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>
        </ScrollView>


    </LinearLayout>

</RelativeLayout>