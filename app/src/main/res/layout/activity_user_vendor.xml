<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserVendorActivity"
    android:orientation="vertical">


        <LinearLayout
            android:layout_marginBottom="350dp"
            android:id="@+id/user_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/user"
            android:orientation="vertical"
            >

                <ImageView
                    android:id="@+id/splash_logo"
                    android:layout_width="138dp"
                    android:layout_height="59dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/mall_logo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I am a..."
                    android:textSize="32sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="160dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Lectus ullamcorper lectus tincidunt amet at."
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="11dp"
                    android:layout_marginStart="160dp"
                    />

                <Button
                    android:id="@+id/btn_user"
                    android:layout_width="132dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="38dp"
                    android:background="@drawable/gradient"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="User"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="350dp"
            android:id="@+id/vendor_icon"
            android:layout_width="match_parent"
            tools:ignore="ContentDescription"
            android:layout_height="match_parent"
            android:gravity="top"
            android:background="@drawable/vendor"
            android:orientation="vertical"
            >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Or..."
                    android:textSize="32sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="33dp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Lectus ullamcorper lectus tincidunt amet at."
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="11dp"
                    android:layout_marginStart="33dp"
                    />

                <Button
                    android:id="@+id/btn_vendor"
                    android:layout_width="132dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="33dp"
                    android:background="@drawable/gradient"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Ventor"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />
        </LinearLayout>

</RelativeLayout>